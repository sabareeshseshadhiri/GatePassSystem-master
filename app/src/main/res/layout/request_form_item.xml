<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dispName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:text="Name : "
            android:textAppearance="@style/TextAppearance.AppCompat" />
        <TextView
            android:id="@+id/studentName"
            android:layout_alignBottom="@+id/dispName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="2dp"/>

        <TextView
            android:id="@+id/dispDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dispName"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:text="Department: "
            android:textAppearance="@style/TextAppearance.AppCompat" />
        <TextView
            android:id="@+id/studentDept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/dispDepartment"
            android:layout_alignParentEnd="true"
            android:layout_margin="2dp"/>
        <TextView
            android:id="@+id/FacultyApp"
            android:layout_below="@+id/dispDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faculty Approval"
            android:layout_margin="2dp"
            />
        <TextView
            android:id="@+id/hodApproval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_alignBottom="@+id/FacultyApp"
            android:layout_alignParentEnd="true"
            android:text="HOD Approval"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>